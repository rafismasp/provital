
<div class="uk-container uk-container-expand">        
  <div class="uk-grid uk-grid-medium  " data-uk-grid>
    
    <!-- panel -->
    <div class="uk-width-1-1@m">
      <div class="uk-card uk-card-default uk-card-small uk-card-hover">
        <div class="uk-card-header">
          <div class="uk-grid uk-grid-small">
            <div class="uk-width-auto" title="<%= feature("description") %>"><h4><%= feature("name").humanize %></h4></div>
          </div>
          <hr class="uk-margin-small">

          <nav class="uk-navbar-container uk-navbar-transparent" uk-navbar>
            <div class="uk-navbar-left">
              <div class="uk-padding-small">
                <%= link_to 'ADD', new_employee_contract_path(), class: "uk-button uk-button-primary uk-button-small" %>
              </div>                
            </div>
            <div class="uk-navbar-right">
              <div class="uk-padding-small">
                <%= link_to 'Export', 'javascript:;', class: "uk-button uk-button-primary uk-button-small",
                :onclick=> "export_report(this, '"+params[:controller].to_s+"')" %>
              </div>
            </div>
          </nav>

        </div>
        <div class="uk-card-body">
          <div class="uk-overflow-auto">
            <table class="uk-table uk-table-small uk-table-hover uk-table-divider">                 
              <thead class="bg-primary">
                <tr>
                  <th>#</th>
                  <th>Number</th>
                  <th>Karyawan</th>
                  <th>Departemen</th>
                  <th>Posisi</th>
                  <th>HRD</th>
                  <th colspan="2">Action</th>
                </tr>
              </thead>
              <tbody>
                <% c=1 %>
                <% @employee_contracts.each do |employee_contract| %>
                  <tr>
                    <td><%= c %></td>
                    <td><%= employee_contract.number %></td>
                    <td><%= employee_contract.employee.name %></td>
                    <td><%= employee_contract.department.name %></td>
                    <td><%= employee_contract.position.name %></td>
                    <td><%= employee_contract.creator.first_name %></td>
                    <td><%= link_to 'Show', employee_contract %></td>
                    <td><%= link_to 'Edit', edit_employee_contract_path(employee_contract) %></td>
                  </tr><% c+=1%>
                <% end %>
              </tbody>
            </table><%== render partial: 'pagy/bootstrap_nav', locals: {pagy: @pagy} if @pagy.present? %>
          </div>
        </div>
      </div>
    </div>
    <!-- /panel -->

  </div>
  
</div>
