
<div class="uk-container uk-container-expand">        
  <div class="uk-grid uk-grid-medium  " data-uk-grid>
    <div class="uk-width-1-1@m">
      <div class="uk-card uk-card-default uk-card-small uk-card-hover">
        <div class="uk-card-header">
          <div class="uk-grid uk-grid-small">
            <div class="uk-width-auto"><h4>Show <%= params[:controller].humanize %></h4></div>
            <div class="uk-width-expand uk-text-right panel-icons">
              <%= link_to '', pdf_coordinates_path, class: "uk-icon-link", :title=>"Close", :'data-uk-tooltip'=> '', :'data-uk-icon'=>"icon: close" %>
            </div>
          </div>
        </div>
        <div class="uk-card-body">
          <form class="uk-form-horizontal">

            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Name</div>
                <div class="uk-width-3-4@m">       
                  <%= text_field_tag :filename, @pdf_coordinate.filename, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
           
            <%#= render 'partial' %>
    <%= link_to print_pdf_coordinate_path(@pdf_coordinate), method: :put, data: { disable_with: "Please wait..."}, target: :_blank do %>
      <button type="button" class="uk-button uk-button-primary uk-button-small">Print</button>
    <% end %>
            <hr>
            <p uk-margin>
              <%= link_to 'Back', pdf_coordinates_path, class: "uk-button uk-button-secondary uk-button-small" %>
              <%= link_to 'Edit', edit_pdf_coordinate_path(@pdf_coordinate), class: "uk-button uk-button-primary uk-button-small" %>
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>