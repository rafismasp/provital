
<div class="uk-container uk-container-expand">        
  <div class="uk-grid uk-grid-medium  " data-uk-grid>
    <div class="uk-width-2-3@m">
      <div class="uk-card uk-card-default uk-card-small uk-card-hover">
        <div class="uk-card-header">
          <div class="uk-grid uk-grid-small">
            <div class="uk-width-auto"><h4>Show <%= params[:controller].humanize %></h4></div>
            <div class="uk-width-expand uk-text-right panel-icons">
              <%= link_to '', employee_internships_path, class: "uk-icon-link", :title=>"Close", :'data-uk-tooltip'=> '', :'data-uk-icon'=>"icon: close" %>
            </div>
          </div>
        </div>
        <div class="uk-card-body">
          <form class="uk-form-horizontal">
            
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Name</div>
                <div class="uk-width-2-3@m">     
                  <%= text_field_tag :name, @employee_internship.name , :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Position</div>
                <div class="uk-width-1-3@m"> 
                  <%= text_field_tag :position, (@employee_internship.position.name if @employee_internship.position.present?), :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Date of Birth</div>
                <div class="uk-width-1-3@m"> 
                  <%= text_field_tag :born_place, @employee_internship.born_place, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
                <div class="uk-width-1-3@m"> 
                  <%= date_field_tag :born_date, @employee_internship.born_date, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Gender</div>
                <div class="uk-width-1-4@m"> 
                  <%= text_field_tag :gender, @employee_internship.gender, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Last Education</div>
                <div class="uk-width-1-4@m"> 
                  <%= text_field_tag :last_education, @employee_internship.last_education, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Phone Number</div>
                <div class="uk-width-1-4@m"> 
                  <%= text_field_tag :phone_number, @employee_internship.phone_number, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>

            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Address</div>
                <div class="uk-width-2-3@m"> 
                  <%= text_area_tag :address, @employee_internship.address, :class=> "uk-textarea uk-form-width-large uk-form-small", :disabled=> true, :rows=> 5 %>
                </div>
              </div>
            </div>

            
            <hr>
            <p uk-margin>
              <%= link_to 'Back', employee_internships_path, class: "uk-button uk-button-secondary uk-button-small" %>
              <%= link_to 'Edit', edit_employee_internship_path(@employee_internship), class: "uk-button uk-button-primary uk-button-small" %>
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
