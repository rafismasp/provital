
<div class="uk-container uk-container-expand">        
  <div class="uk-grid uk-grid-medium  " data-uk-grid>
    <div class="uk-width-1-1@m">
      <div class="uk-card uk-card-default uk-card-small uk-card-hover">
        <div class="uk-card-header">
          <div class="uk-grid uk-grid-small">
            <div class="uk-width-auto" title="<%= feature("description") %>"><h4>Show: <%= feature("name") %></h4></div>
            <div class="uk-width-expand uk-text-right panel-icons">
              <%= link_to '', delivery_order_suppliers_path(:id=> @delivery_order_supplier.id), class: "uk-icon-link", :title=>"Close", :'data-uk-tooltip'=> '', :'data-uk-icon'=>"icon: close" %>
            </div>
          </div>
        </div>
        <div class="uk-card-body">
          <form class="uk-form-horizontal">
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-3@m">
                  <div class="uk-margin-small">
                    <div class="uk-grid">
                      <div class="uk-width-1-4@m">Number</div>
                      <div class="uk-width-2-3@m">    
                        <%= text_field_tag :number, @delivery_order_supplier.number, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                      </div>
                    </div>
                  </div>
                  <div class="uk-margin-small">
                    <div class="uk-grid">
                      <div class="uk-width-1-4@m">Suppliers</div>
                      <div class="uk-width-3-4@m">  
                        <%= text_field_tag :supplier_name, @delivery_order_supplier.supplier.name, :class=> "uk-select uk-form-width-large uk-form-small", :disabled=> true %>
                      </div>
                    </div>
                  </div>
                  <div class="uk-margin-small">
                    <div class="uk-grid">
                      <div class="uk-width-1-4@m">Transforter</div>
                      <div class="uk-width-2-3@m">
                        <%= text_field_tag :transforter_name, @delivery_order_supplier.transforter_name, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="uk-width-1-3@m">
                  <div class="uk-margin-small">
                    <div class="uk-grid">
                      <div class="uk-width-1-4@m">Date</div>
                      <div class="uk-width-2-3@m">  
                        <%= date_field_tag :date, @delivery_order_supplier.date, :class=> "uk-input uk-form-width-medium uk-form-small", :disabled=> true %>
                      </div>
                    </div>
                  </div>
                  <div class="uk-margin-small">
                    <div class="uk-grid">
                      <div class="uk-width-1-4@m">T.O.P</div>
                      <div class="uk-width-3-4@m">
                        <div class="uk-flex">
                          <%= text_field_tag :top_day, @delivery_order_supplier.top_day, :class=> "uk-select uk-form-small uk-width-1-4", :disabled=> true %>
                          <%= text_field_tag :term_of_payment, @delivery_order_supplier.term_of_payment.name, :class=> "uk-select uk-form-small uk-width-3-4", :disabled=> true %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="uk-margin-small">
                    <div class="uk-grid">
                      <div class="uk-width-1-4@m">Vehicle number</div>
                      <div class="uk-width-2-3@m">
                        <%= text_field_tag :vehicle_number, @delivery_order_supplier.vehicle_number, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="uk-width-1-3@m">
                  <div class="uk-margin-small">
                    <div class="uk-grid">
                      <div class="uk-width-1-4@m">Currency</div>
                      <div class="uk-width-1-4@m">
                        <%= text_field_tag :currency, @delivery_order_supplier.currency.name, :class=> "uk-select uk-form-width-medium uk-form-small", :disabled=> true %>
                      </div>
                    </div>
                  </div>
                  <div class="uk-margin-small">
                    <div class="uk-grid">
                      <div class="uk-width-1-4@m">Tax</div>
                      <div class="uk-width-1-2@m">  
                        <%= text_field_tag :tax, @delivery_order_supplier.tax.name, :class=> "uk-select uk-form-width-medium uk-form-small", :disabled=> true %>
                      </div>
                    </div>
                  </div>
                  <div class="uk-margin-small">
                    <div class="uk-grid">
                      <div class="uk-width-1-4@m">Driver Name</div>
                      <div class="uk-width-2-3@m">
                        <%= text_field_tag :vehicle_driver_name, @delivery_order_supplier.vehicle_driver_name, :class=> "uk-input uk-form-width-medium uk-form-small", :disabled=> true %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-3@m">
                  <div class="uk-margin-small">
                    <div class="uk-grid">
                      <div class="uk-width-1-4@m">Remarks</div>
                      <div class="uk-width-2-3@m">
                        <%= text_field_tag :remarks, @delivery_order_supplier.remarks, :class=> "uk-input uk-form-small", :disabled=> true%>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <hr class="uk-margin-small">
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-1@m">
                  <table class="uk-table uk-table-small uk-table-hover uk-table-bordered uk-table-divider" id="item">                 
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>Batch Number</th>
                        <th>Material Name</th>
                        <th>Material Code</th>
                        <th>Unit</th>
                        <th>Quantity</th>
                        <th>Remarks</th>
                      </tr>
                    </thead>
                    <tbody>            
                      <% c=0 %>
                      <% if @delivery_order_supplier_items.present? %>
                        <% @delivery_order_supplier_items.each do |item| %>
                          <% part = (item.material if item.material.present?) %>
                          <tr>
                            <td class="counter">
                              <%= c+=1%>
                            </td>
                            <td><%= item.material_batch_number.number if item.material_batch_number.present? %></td>
                            <td><%= (part.name if part.present?) %></td>
                            <td><%= (part.part_id if part.present?) %></td>
                            <td><%= (part.unit_name if part.present?) %></td>
                            <td class="uk-text-right">
                              <%= number_with_precision(item.quantity, precision: 0, delimiter: ".", separator: ",") %>
                            </td>
                            <td class="uk-width-medium">
                              <%= item.remarks %>
                            </td>
                          </tr>
                        <% end %>
                      <% else %>
                        <tr>
                          <td colspan="10">Tidak ada Data!</td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
  
            <hr>

            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-1@m">
                  <div class="uk-grid">
                    <div class="uk-width-1-2@m">
                      <% if @delivery_order_supplier.status == 'new' or @delivery_order_supplier.status == 'canceled1' %>
                        <%= link_to approve_delivery_order_supplier_path(:id=> @delivery_order_supplier.id, :status=> 'approve1'), method: :put, data: { disable_with: "Please wait...", confirm: 'This will be approved1. Proced?' } do %>
                          <button type="button" class="uk-button uk-button-secondary uk-button-small">Approve 1</button>
                        <% end %>
                      <% elsif @delivery_order_supplier.status == 'approved1' or @delivery_order_supplier.status == 'canceled2' %>
                        <%= link_to approve_delivery_order_supplier_path(:id=> @delivery_order_supplier.id, :status=> 'cancel_approve1'), method: :put, data: { disable_with: "Please wait...", confirm: 'This will be canceled1. Proced?' } do %>
                          <button type="button" class="uk-button uk-button-danger uk-button-small">Cancel 1</button>
                        <% end %>
                        <%= link_to approve_delivery_order_supplier_path(:id=> @delivery_order_supplier.id, :status=> 'approve2'), method: :put, data: { disable_with: "Please wait...", confirm: 'This will be approved2. Proced?' } do %>
                          <button type="button" class="uk-button uk-button-secondary uk-button-small">Approve 2</button>
                        <% end %> 
                      <% elsif @delivery_order_supplier.status == 'approved2' or @delivery_order_supplier.status == 'canceled3' %>   
                        <%= link_to approve_delivery_order_supplier_path(:id=> @delivery_order_supplier.id, :status=> 'cancel_approve2'), method: :put, data: { disable_with: "Please wait...", confirm: 'This will be canceled2. Proced?' } do %>
                          <button type="button" class="uk-button uk-button-danger uk-button-small">Cancel 2</button>
                        <% end %>

                        <%= link_to approve_delivery_order_supplier_path(:id=> @delivery_order_supplier.id, :status=> 'approve3'), method: :put, data: { disable_with: "Please wait...", confirm: 'This will be approved3. Proced?' } do %>
                          <button type="button" class="uk-button uk-button-secondary uk-button-small">Approve 3</button>
                        <% end %>                
                      <% else %>
                        <%= link_to approve_delivery_order_supplier_path(:id=> @delivery_order_supplier.id, :status=> 'cancel_approve3'), method: :put, data: { disable_with: "Please wait...", confirm: 'This will be canceled3. Proced?' } do %>
                          <button type="button" class="uk-button uk-button-danger uk-button-small">Cancel 3</button>
                        <% end %>
                      <% end %>
                    </div>
                    <div class="uk-width-1-2@m">
                      <% case @delivery_order_supplier.status %>
                      <% when 'approved3' %>
                        <%= link_to print_delivery_order_supplier_path(:id=> @delivery_order_supplier.id), method: :put, data: { disable_with: "Please wait..."}, target: :_blank do %>
                          <button type="button" class="uk-button uk-button-primary uk-button-small uk-align-right">Print</button>
                        <% end %>
                        <%= link_to 'Back', delivery_order_suppliers_path(), class: "uk-button uk-button-secondary uk-button-small uk-align-right" %>
                      <% else %>
                        <%= link_to 'Back', delivery_order_suppliers_path(), class: "uk-button uk-button-secondary uk-button-small uk-align-right" %>
                        <%= link_to 'Edit', edit_delivery_order_supplier_path(:id=> @delivery_order_supplier.id), class: "uk-button uk-button-primary uk-button-small uk-align-right" %>
                      <% end %>    
                    </div>
                  </div>

                </div>
              </div>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>