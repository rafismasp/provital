  <div class="uk-container uk-container-expand">        
    <div class="uk-grid uk-grid-medium  " data-uk-grid>
      <div class="uk-width-1-2@m">
        <div class="uk-card uk-card-default uk-card-small uk-card-hover">
          <div class="uk-card-header">
            <div class="uk-grid uk-grid-small">
              <div class="uk-width-auto" title="<%= feature("description") %>"><h4>Form 3a0 <%= feature("name").humanize %></h4></div>
              <div class="uk-width-expand uk-text-right panel-icons">
                <%= link_to '', working_hour_summaries_path, class: "uk-icon-link", :title=>"Close", :'data-uk-tooltip'=> '', :'data-uk-icon'=>"icon: close" %>
              </div>
            </div>
          </div>
          <div class="uk-card-body">
            <form class="uk-form-horizontal">
              <%= hidden_field_tag 'period', params[:period] %>
              <div class="uk-margin-small">
                <div class="uk-grid">
                  <div class="uk-width-1-2@m">
                    <div class="uk-margin-small">
                      <div class="uk-grid">
                        <div class="uk-width-1-3@m">DEPARTMENT</div>
                        <div class="uk-width-expand@m">
                          <%= select_tag "select_department", options_for_select(@departments.map { |e| [e.name, e.id] }, (params[:department_id]) ), :include_blank=>'-- All Department --', :class=>"uk-button uk-button-default uk-text-left" %>
                        </div>
                      </div>  
                    </div>
                  </div>
                  <div class="uk-width-1-3@m uk-width-1-3@l">
                    <div class="uk-margin-small">
                      <div class="uk-grid">
                        <div class="uk-width-1-1@m" id="precompile_report"><h4></h4></div>
                      </div>
                    </div>
                  </div>
                  <hr>
                </div>
              </div>
              <hr>
              <div class="uk-margin-small">
                <div class="uk-grid">
                  <div class="uk-width-1-1@m uk-overflow-auto scroll">
                    <table class="uk-table uk-table-small uk-table-bordered uk-table-hover uk-table-divider" id="precompile_data">
                      <tr>
                        <td>No</td>
                        <td>PIN</td>
                        <td>Name</td>
                        <td>Time Process</td>
                        <td>Status</td>
                      </tr>
                    </table>
                  </div>
                </div>
              </div>
              <hr class="uk-margin-small">
              <div class="uk-width-1-1@m uk-column-1-3">
                <div>
                  <%= link_to 'PRECOMPILE', 'javascript:;', :onclick=>"precompile_process(this, '"+params[:controller].to_s+"')", class: "uk-button uk-button-primary uk-button-small" %>

                  <% link_to "Precompile", "/working_hour_summaries/?job=precompile&period=#{params[:period]}&department_id=#{params[:department_id]}&precompile_process=start&kind_tbl=#{params[:kind_tbl]}", {:remote=> true, :class=> "uk-button uk-button-primary uk-button-small", :id=>"precompile_button"}%>
                </div>
                <div id="precompile_report"></div>
                <div> 
                  <%= link_to 'Back', working_hour_summaries_path(:department_id =>params[:department_id], :period=>params[:period]), class: "uk-button uk-button-secondary uk-button-small" %>
                </div>
              </div>
              
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
