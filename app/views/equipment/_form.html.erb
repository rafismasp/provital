<%= form_with(model: equipment, local: true, class: "uk-form-horizontal") do |form| %>
  <% if equipment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(equipment.errors.count, "error") %> prohibited this equipment from being saved:</h2>

      <ul>
      <% equipment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="uk-margin-small">
    <div class="uk-grid">
      <div class="uk-width-1-4@m">Internal Part ID</div>
      <div class="uk-width-1-2@m">       
        <%= form.text_field :part_id, id: :equipment_part_id, :class=> "uk-input uk-form-width-large uk-form-small" %>
      </div>
    </div>
  </div>
  <div class="uk-margin-small">
    <div class="uk-grid">
      <div class="uk-width-1-4@m">Part Name</div>
      <div class="uk-width-3-4@m">     
        <%= form.text_field :name, id: :equipment_name, :class=> "uk-input uk-form-width-large uk-form-small" %>
      </div>
    </div>
  </div>
  <div class="uk-margin-small">
    <div class="uk-grid">
      <div class="uk-width-1-4@m">Part Model</div>
      <div class="uk-width-1-2@m">       
        <%= form.text_field :part_model, id: :equipment_part_model, :class=> "uk-input uk-form-width-large uk-form-small" %>
      </div>
    </div>
  </div>
  <div class="uk-margin-small">
    <div class="uk-grid">
      <div class="uk-width-1-4@m">Unit</div>
      <div class="uk-width-1-3@m">     
        <%= form.collection_select :unit_id, @units,:id,:name, {:prompt=>"-- Select --"}, class: "uk-select uk-form-width-large uk-form-small" %>
      </div>
    </div>
  </div>
  <div class="uk-margin-small">
    <div class="uk-grid">
      <div class="uk-width-1-4@m">Color</div>
      <div class="uk-width-1-3@m">       
        <%= form.collection_select :color_id, @colors,:id,:name, {:prompt=>"-- Select --"}, class: "uk-select uk-form-width-large uk-form-small" %>
      </div>
    </div>
  </div>

  <hr>
  <p uk-margin>
    <%= link_to 'Back', "/equipment", class: "uk-button uk-button-secondary uk-button-small" %>
    <%= form.submit "Save", class: "uk-button uk-button-primary uk-button-small" %>
  </p>
<% end %>
