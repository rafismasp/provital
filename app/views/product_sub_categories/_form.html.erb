
<%= form_with(model: product_sub_category, local: true, class: "uk-form-horizontal") do |form| %>

  <% if product_sub_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product_sub_category.errors.count, "error") %> prohibited this product_sub_category from being saved:</h2>

      <ul>
      <% product_sub_category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="uk-margin-small">
    <div class="uk-grid">
      <div class="uk-width-1-4@m">Category</div>
      <div class="uk-width-3-4@m">
        <%= form.collection_select :product_category_id, @product_categories, :id,:name, {:prompt=>"-- Select --"}, class: "uk-select uk-form-width-large uk-form-small" if @product_categories.present? %>
      </div>
    </div>
  </div>
  <div class="uk-margin-small">
    <div class="uk-grid">
      <div class="uk-width-1-4@m">Code</div>
      <div class="uk-width-3-4@m">
        <%= form.text_field :code, id: :product_sub_category_code, :class=> "uk-input uk-form-width-small uk-form-small" %>
      </div>
    </div>
  </div>
  <div class="uk-margin-small">
    <div class="uk-grid">
      <div class="uk-width-1-4@m">Sub Category</div>
      <div class="uk-width-3-4@m">
        <%= form.text_field :name, id: :product_sub_category_name, :class=> "uk-input uk-form-width-large uk-form-small" %>
      </div>
    </div>
  </div>

  <hr>
  <p uk-margin>
    <%= link_to 'Back', product_sub_categories_path, class: "uk-button uk-button-secondary uk-button-small" %>
    <%= form.submit "Save", class: "uk-button uk-button-primary uk-button-small" %>
  </p>

<% end %>
