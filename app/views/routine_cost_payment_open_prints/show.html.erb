
<div class="uk-container uk-container-expand">        
  <div class="uk-grid uk-grid-medium  " data-uk-grid>
    <div class="uk-width-1-1@m">
      <div class="uk-card uk-card-default uk-card-small uk-card-hover">
        <div class="uk-card-header">
          <div class="uk-grid uk-grid-small">
            <div class="uk-width-auto"><h4>Show <%= params[:controller].humanize %></h4></div>
            <div class="uk-width-expand uk-text-right panel-icons">
              <%= link_to '', routine_cost_payment_open_prints_path, class: "uk-icon-link", :title=>"Close", :'data-uk-tooltip'=> '', :'data-uk-icon'=>"icon: close" %>
            </div>
          </div>
        </div>
        <div class="uk-card-body">
          <form class="uk-form-horizontal">

                <div class="uk-margin-small">
                  <div class="uk-grid">
                    <!-- Left -->
                    <div class="uk-width-1-3@m">
                      <div class="uk-grid uk-margin-small">
                        <div class="uk-width-1-3@m">Bpk Number</div>
                        <div class="uk-width-2-3@m">
                          <%= select_tag "routine_cost_payment_open_print[routine_cost_payment_id]", options_for_select(@routine_cost_payment.map { |e| ["#{e.number} - #{e.date}",e.id] },(@routine_cost_payment_open_print.routine_cost_payment_id)), {:prompt => " -- select -- ", class: "uk-select uk-form-small", :disabled=>true} %>
                        </div>
                      </div>

                      <div class="uk-grid uk-margin-small">
                        <div class="uk-width-1-3@m">Description</div>
                        <div class="uk-width-2-3@m routine_cost_form">
                          <%= text_area_tag :description, @routine_cost_payment_open_print.description, rows: 4, :class=> "uk-textarea uk-form-width-large uk-form-small", :style=>"line-height: normal !important;", :disabled=>true %>
                        </div>
                      </div>
                      
                    </div>
                    <!-- End Left -->
                  </div>
                </div>


            <!-- APPROVE -->


            <hr>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-1@m">
                  <div class="uk-grid">
                    <div class="uk-width-1-2@m">
                      <% if @routine_cost_payment_open_print.status == 'new' %>   
                        <%= link_to approve_routine_cost_payment_open_print_path(@routine_cost_payment_open_print, :status=> 'approve1'), method: :put, data: { disable_with: "Please wait...", confirm: 'This will be approved. Proced?' } do %>
                          <button type="button" class="uk-button uk-button-secondary uk-button-small">Approve 3</button>
                        <% end %>                
                      <% end %>
                    </div>
                    <div class="uk-width-1-2@m">
                      <% case @routine_cost_payment_open_print.status %>
                      <% when 'approved3' %>
                        <%= link_to 'Back', routine_cost_payment_open_prints_path, class: "uk-button uk-button-secondary uk-button-small uk-align-right" %>
                      <% else %>
                        <%= link_to 'Back', routine_cost_payment_open_prints_path, class: "uk-button uk-button-secondary uk-button-small uk-align-right" %>
                        <%= link_to 'Edit', edit_routine_cost_payment_open_print_path(@routine_cost_payment_open_print), class: "uk-button uk-button-primary uk-button-small uk-align-right" %>
                      <% end %>    
                    </div>
                  </div>

                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
