
<div class="uk-container uk-container-expand">        
  <div class="uk-grid uk-grid-medium  " data-uk-grid>
    
    <!-- panel -->
    <div class="uk-width-1-1@l">
      <div class="uk-card uk-card-default uk-card-small uk-card-hover">
        <div class="uk-card-header">
          <div class="uk-grid uk-grid-small">
            <div class="uk-width-auto" title="<%= feature("description") %>"><h4><%= feature("name").humanize %></h4></div>
          </div>
          <hr class="uk-margin-small">

          <nav class="uk-navbar-container uk-navbar-transparent" uk-navbar>
            <div class="uk-navbar-left">
              <div class="uk-padding-small">
                <%= link_to 'ADD', new_master_file_path(), class: "uk-button uk-button-primary uk-button-small" if params[:myaccount].blank? %>
              </div>
              <div class="uk-padding-small">
                <a class="uk-button uk-button-default uk-button-small" href="#modal-sections" uk-toggle>Filter</a>
              </div>
            </div>
            <div class="uk-navbar-right">
            </div>
          </nav>

        </div>
        <div class="uk-card-body">
          <div class="uk-overflow-auto">
            <table class="uk-table uk-table-small uk-table-hover uk-table-divider">
              <thead class="bg-primary">
                <tr>
                  <th>#</th>
                  <th colspan="2">Option</th>
                  <th>Nama File</th>
                  <th>File</th>
                  <th>Created By</th>
                  <th>Created At</th>
                </tr>
              </thead>
              <tbody>
                <% c=0 %>   
                <% @master_files.each do |master_file| %>
                  <tr>
                    <td><%= c+=1 %></td>
                    <td><%= link_to 'Show', master_file_path(:id=> master_file.id, :view_kind=> params[:view_kind], :filter_column=> params[:filter_column], :filter_value=> params[:filter_value]) if params[:myaccount].blank? %></td>
                    <td><%= link_to 'Edit', edit_master_file_path(master_file, :view_kind=> params[:view_kind], :filter_column=> params[:filter_column], :filter_value=> params[:filter_value]) if params[:myaccount].blank?%></td>
                    <td><%= master_file.name %></td>
                    <td><a href="https://cdn.techno.co.id/v3/file?id=<%= master_file.cdn_sys_file_id %>" class="uk-button uk-button-primary uk-button-small" target= '_blank'> View File </td>
                    <td><%= "#{master_file.creator.first_name} #{master_file.creator.last_name}" if master_file.creator.present? %></td>
                    <td><%= master_file.created_at %></td>
                  </tr>
                <% end if @master_files.present? %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- /panel -->

  </div>
  
</div>
