<div class="uk-container uk-container-expand">        
  <div class="uk-grid uk-grid-medium  " data-uk-grid>
    <div class="uk-width-1-1@m uk-first-column">
      <div class="uk-card uk-card-default uk-card-small uk-card-hover">
        <div class="uk-card-header">
          <div class="uk-grid uk-grid-small">
            <div class="uk-width-auto"><h4>Show <%= params[:controller].humanize %></h4></div>
            <div class="uk-width-expand uk-text-right panel-icons">
              <%= link_to '', master_files_path, class: "uk-icon-link", :title=>"Close", :'data-uk-tooltip'=> '', :'data-uk-icon'=>"icon: close" %>
            </div>
          </div>
        </div>
        <div class="uk-card-body">
          <div class="uk-margin-small">
            <div class="uk-grid">
              <div class="uk-width-auto@m">
                <div class="uk-margin-small">
                  <div class="uk-grid">
                    <div class="uk-width-1-3@m">File Name</div>
                    <div class="uk-width-2-3@m">
                      <%= text_field_tag "nama" , (@master_file.name if @master_file.present?) , :class=> "uk-input uk-form-width-large uk-form-small", :readonly=>true, :placeholder=> "Nama File" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <hr/>
            <div class="uk-grid">
              <div class="uk-width-2-3@m">
                <% cf=0 %>
                <table class="uk-table uk-table-striped">
                  <thead>
                    <tr>
                      <th>No.</th>
                      <th>File.</th>
                      <th>Created By.</th>
                      <th>Created At.</th>
                      <th>Status.</th>
                    </tr>
                  </thead>   
                  <tbody>
                    <% @record_files.limit(5).each do |record_file| %>
                      <tr>
                        <td align="center"><%= cf+=1 %></td>
                        <td><a href="https://cdn.techno.co.id/v3/file?id=<%= record_file.id %>" ext="<%= record_file.ext.gsub('.','') %>" class="uk-button uk-button-primary uk-button-small" target= '_blank'> View File <%= record_file.ext.gsub('.','').upcase %></a></td>

                        <td align="left"><%= "#{record_file.creator.first_name} #{record_file.creator.last_name}" if record_file.creator.present? %></td>
                        <td align="left"><%= record_file.created_at %></td>
                        <td align="left"><%= record_file.status %></td>
                      </tr>
                    <% end if @record_files.present? %>
                  </tbody> 
                </table> 
              </div>
            </div>
          </div>
          <hr>
          <p uk-margin>
            <%= link_to 'Back', master_files_path, class: "uk-button uk-button-secondary uk-button-small" %>
            <%= link_to 'Edit', edit_master_file_path(@master_file, :q=> params[:q], :q1=> params[:q1], :q2=> params[:q2]), class: "uk-button uk-button-primary uk-button-small" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>