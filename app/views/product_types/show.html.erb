
<div class="uk-container uk-container-expand">        
  <div class="uk-grid uk-grid-medium  " data-uk-grid>
    <div class="uk-width-1-2@m">
      <div class="uk-card uk-card-default uk-card-small uk-card-hover">
        <div class="uk-card-header">
          <div class="uk-grid uk-grid-small">
            <div class="uk-width-auto"><h4>Show <%= params[:controller].humanize %></h4></div>
            <div class="uk-width-expand uk-text-right panel-icons">
              <%= link_to '', product_types_path, class: "uk-icon-link", :title=>"Close", :'data-uk-tooltip'=> '', :'data-uk-icon'=>"icon: close" %>
            </div>
          </div>
        </div>
        <div class="uk-card-body">
          <form class="uk-form-horizontal">
            
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Sub Category</div>
                <div class="uk-width-3-4@m">       
                  <%= text_field_tag :sub_category, (@product_type.product_sub_category.present? ? @product_type.product_sub_category.name : nil), :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Customer</div>
                <div class="uk-width-3-4@m">       
                  <%= text_field_tag :customer, (@product_type.customer.present? ? @product_type.customer.name : nil), :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Brand</div>
                <div class="uk-width-3-4@m">       
                  <%= text_field_tag :brand, @product_type.brand, :class=> "uk-input uk-form-width-medium uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Code</div>
                <div class="uk-width-3-4@m">       
                  <%= text_field_tag :code, @product_type.code, :class=> "uk-input uk-form-width-small uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Type</div>
                <div class="uk-width-3-4@m">       
                  <%= text_field_tag :name, @product_type.name, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>

            <hr>
            <p uk-margin>
              <%= link_to 'Back', product_types_path, class: "uk-button uk-button-secondary uk-button-small" %>
              <%= link_to 'Edit', edit_product_type_path(@product_type), class: "uk-button uk-button-primary uk-button-small" %>
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>