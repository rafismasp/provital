
<div class="uk-container uk-container-expand">        
  <div class="uk-grid uk-grid-medium  " data-uk-grid>
    <div class="uk-width-1-2@m">
      <div class="uk-card uk-card-default uk-card-small uk-card-hover">
        <div class="uk-card-header">
          <div class="uk-grid uk-grid-small">
            <div class="uk-width-auto" title="<%= feature("description") %>"><h4>Show: <%= feature("name").humanize %></h4></div>
            <div class="uk-width-expand uk-text-right panel-icons">
              <%= link_to '', materials_path, class: "uk-icon-link", :title=>"Close", :'data-uk-tooltip'=> '', :'data-uk-icon'=>"icon: close" %>
            </div>
          </div>
        </div>
        <div class="uk-card-body">
          <form class="uk-form-horizontal">
            
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Vendor</div>
                <div class="uk-width-1-2@m">       
                  <%= text_field_tag :vendor, @material.vendor_name, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Material Category</div>
                <div class="uk-width-1-2@m">       
                  <%= text_field_tag :category, @material.material_category.name, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Material Code</div>
                <div class="uk-width-1-2@m">       
                  <%= text_field_tag :part_id, @material.part_id, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Material Name</div>
                <div class="uk-width-3-4@m">       
                  <%= text_field_tag :name, @material.name, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
            <div class="uk-margin-small" title="Minimum Order Quantity">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">MOQ</div>
                <div class="uk-width-1-3@m">       
                  <%= number_field_tag :minimum_order_quantity, @material.minimum_order_quantity, :class=> "uk-input uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Unit</div>
                <div class="uk-width-1-3@m">       
                  <%= text_field_tag :unit, (@material.unit.present? ? @material.unit.name : nil), :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Color</div>
                <div class="uk-width-1-3@m">       
                  <%= text_field_tag :color, (@material.color.present? ? @material.color.name : nil), :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>

            <hr>
            <p uk-margin>
              <%= link_to 'Back', materials_path, class: "uk-button uk-button-secondary uk-button-small" %>
              <%= link_to 'Edit', edit_material_path(@material), class: "uk-button uk-button-primary uk-button-small" %>
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
