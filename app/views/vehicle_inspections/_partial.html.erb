<% case params[:partial] %>
<% when 'change_filter_column' %>
  <%= render 'layouts/filter_option' %>
<% else %>
  <div class="uk-overflow-auto" id="index_content">
    <table class="uk-table uk-table-small uk-table-hover uk-table-divider uk-table-bordered">                 
      <thead class="bg-primary">
        <tr>
          <th>No</th>
          <th>Status</th>
          <th>Number</th>
          <th>Date</th>
          <th>Delivery Number</th>
          <th>Vehicle No</th>
          <th>Vehicle Type</th>
          <th colspan="2" class="uk-text-center">Action</th>
        </tr>
      </thead>
      <tbody>
        <% c=0 %>
        <% @vehicle_inspections.each do |vehicle_inspection| %>
          <tr uk-tooltip="title: <%= row_tooltip(vehicle_inspection) %>; pos: top-left">
            <td><%= c+=1 %></td>
            <td><%= vehicle_inspection.status %></td>
            <td><%= vehicle_inspection.number %></td>
            <td><%= vehicle_inspection.date %></td>
            <td><%= vehicle_inspection.delivery_order.number %></td>
            <td><%= vehicle_inspection.vehicle_no %></td>
            <td><%= vehicle_inspection.vehicle_type  %></td>
            <td><%= link_to 'Show', vehicle_inspection %></td>
            <td><%= link_to 'Edit', edit_vehicle_inspection_path(vehicle_inspection, job: 'edit') %></td>
          </tr>
        <% end %>
      </tbody>
    </table><%== render partial: 'pagy/bootstrap_nav', locals: {pagy: @pagy} if @pagy.present? %>
  </div>
<% end %>