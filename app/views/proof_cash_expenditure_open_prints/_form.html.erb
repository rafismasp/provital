
<%= form_with(model: proof_cash_expenditure_open_print, local: true, class: "uk-form-horizontal", :multipart => true) do |form| %>

  <% if proof_cash_expenditure_open_print.errors.any? %>
    <% alert = "<h4> #{pluralize(proof_cash_expenditure_open_print.errors.count, 'error')} prohibited this proof_cash_expenditure_open_print from being saved:</h4>" %>
    <% alert += "<ul>" %>
    <% proof_cash_expenditure_open_print.errors.full_messages.each do |message| %>
      <% alert += "<li>#{message}</li>" %>
    <% end %>
    <% alert += "</ul>" %>

    <script type="text/javascript">
      UIkit.notification({
        message: '<%= alert.to_s.html_safe %>', status: 'warning', pos: 'top-center', timeout: 10000
      });
    </script>
  <% end if proof_cash_expenditure_open_print.present? %>

  <div class="uk-margin-small">
    <div class="uk-grid">
      <!-- Left -->
      <div class="uk-width-1-3@m">
        <div class="uk-grid uk-margin-small">
          <div class="uk-width-1-3@m">Bpk Number</div>
          <div class="uk-width-2-3@m">
            <%= select_tag "proof_cash_expenditure_open_print[proof_cash_expenditure_id]", options_for_select(@proof_cash_expenditure.map { |e| ["#{e.number} - #{e.date}",e.id] },(form.object.proof_cash_expenditure_id if form.object.present?)), {:prompt => " -- select -- ", class: "uk-select uk-form-small"} %>
          </div>
        </div>

        <div class="uk-grid uk-margin-small">
          <div class="uk-width-1-3@m">Description</div>
          <div class="uk-width-2-3@m routine_cost_form">
            <%= form.text_area :description, id: :cash_submission_description, rows: 4, :class=> "uk-textarea uk-form-width-large uk-form-small", :style=>"line-height: normal !important;" %>
          </div>
        </div>

      </div>
      <!-- End Left -->
    </div>
  </div>

  <hr>
  <p uk-margin>
    <%= link_to 'Back', proof_cash_expenditure_open_prints_path, class: "uk-button uk-button-secondary uk-button-small" %>
    <%= form.submit "Save", class: "uk-button uk-button-primary uk-button-small" , data: { disable_with: "Please wait..." }%>
  </p>

<% end %>

<script type="text/javascript">
  
$( document ).ready(function() {
  $("#proof_cash_expenditure_open_print_proof_cash_expenditure_id").select2({
   placeholder: {
        id: '-1', // the value of the option
        text: 'Select an option'
      }
  });
});
</script>