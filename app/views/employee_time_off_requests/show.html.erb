
<div class="uk-container uk-container-expand">        
  <div class="uk-grid uk-grid-medium  " data-uk-grid>
    <div class="uk-width-1-2@m">
      <div class="uk-card uk-card-default uk-card-small uk-card-hover">
        <div class="uk-card-header">
          <div class="uk-grid uk-grid-small">
            <div class="uk-width-auto"><h4>Show <%= params[:controller].humanize %></h4></div>
            <div class="uk-width-expand uk-text-right panel-icons">
              <%= link_to '', employee_time_off_requests_path, class: "uk-icon-link", :title=>"Close", :'data-uk-tooltip'=> '', :'data-uk-icon'=>"icon: close" %>
            </div>
          </div>
        </div>
        <div class="uk-card-body">
          <form class="uk-form-horizontal">

            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Leave Type</div>
                <div class="uk-width-3-4@m">
                  <%= text_field_tag :leave_type, (@employee_time_off_request.leave_type.name if @employee_time_off_request.leave_type.present?), :class=> "uk-select uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Date Between</div>
                <div class="uk-width-1-3@m">
                  <%= date_field_tag :beginning_at, @employee_time_off_request.beginning_at, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
                <div class="uk-width-1-3@m">
                  <%= date_field_tag :ending_at, @employee_time_off_request.ending_at, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>      
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Department</div>
                <div class="uk-width-1-2@m">
                  <%= text_field_tag :department_name, (@employee_time_off_request.department.name if @employee_time_off_request.department.present?), :class=> "uk-select uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>    
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Employee Name</div>
                <div class="uk-width-3-4@m"> 
                  <%= text_field_tag :employee_name, (@employee_time_off_request.employee.name if @employee_time_off_request.employee.present?), :class=> "uk-select uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>  
            <div class="uk-margin-small">
              <div class="uk-grid">
                <div class="uk-width-1-4@m">Remarks</div>
                <div class="uk-width-3-4@m">    
                  <%= text_area_tag :remarks, @employee_time_off_request.remarks, :class=> "uk-input uk-form-width-large uk-form-small", :disabled=> true %>
                </div>
              </div>
            </div>

            <hr>
            <p uk-margin>
              <%= link_to 'Back', employee_time_off_requests_path, class: "uk-button uk-button-secondary uk-button-small" %>
              <%= link_to 'Edit', edit_employee_time_off_request_path(@employee_time_off_request), class: "uk-button uk-button-primary uk-button-small" %>
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>